# Template for the test network
NAME        = "{{ validation.vnet.name }}"
DESCRIPTION = "{{ validation.vnet.desc }}"

VN_MAD = {{ validation.vnet.vn_mad }}
BRIDGE = {{ validation.vnet.bridge | d('br-test') }}

{% if validation.vnet.phydev is not none %}
PHYDEV = {{ validation.vnet.phydev }}
{% endif %}

NETWORK_ADDRESS = {{ validation.vnet.network_address | default('10.0.0.10') }}
NETWORK_MASK    = {{ validation.vnet.network_mask | default('255.255.255.0') }}
DNS             = {{ validation.vnet.dns | default('10.0.0.1') }}
GATEWAY         = {{ validation.vnet.gateway | default('10.0.0.1') }}

{% for r in validation.vnet.ar %}
AR=[TYPE="{{ r.type }}", IP="{{ r.ip }}", SIZE="{{ r.size }}"]
{% endfor %}

